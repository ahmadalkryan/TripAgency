@model Application.DTOs.Contact.ContactTypesDto

@{
    ViewData["Title"] = "Contact Type List";
}

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white py-2">Contact Type List</h1>
            </div>
        </div>
    </div>

    <div class="card-body border p-4">
        <div class="row pb-3">
            <div class="">
                <a asp-controller="ContactType" asp-action="Create" class="btn btn-secondary">
                    Create New Contact Type
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th> <!-- Assuming your ContactTypesDto has a Name property -->
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.ContactTypes != null)
                {
                    @foreach (var obj in Model.ContactTypes)
                    {
                        <tr>
                            <td>@obj.Id</td>
                            <td>@obj.Type</td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="ContactType" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-success mx-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-controller="ContactType" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>