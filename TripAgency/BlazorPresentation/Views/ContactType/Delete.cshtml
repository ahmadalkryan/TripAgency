@model Application.DTOs.Common.BaseDto<int>

    @{
    ViewData["Title"] = "Delete Contact Type";
    }

    <div class="container mt-5">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-danger text-white py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion
                    </h3>
                    <a asp-action="Index" class="btn btn-outline-light btn-sm">
                        <i class="fas fa-times"></i>
                    </a>
                </div>
            </div>

            <div class="card-body p-4">
                <form asp-action="Delete" asp-route-id="@Model.Id">
                    <input type="hidden" asp-for="Id" />

                    <div class="alert alert-warning mb-4">
                        <h5 class="alert-heading">
                            <i class="fas fa-question-circle me-2"></i>Are you sure?
                        </h5>
                        <p class="mb-0">You are about to permanently delete this contact type. This action cannot be undone.</p>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-3">
                        <button type="submit" class="btn btn-danger px-4">
                            <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">
                            <i class="fas fa-arrow-left me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @section Styles {
        <style>
            .card {
                border-radius: 0.5rem;
                max-width: 600px;
                margin: 0 auto;
            }

            .card-header {
                border-radius: 0.5rem 0.5rem 0 0 !important;
            }
        </style>
    }
