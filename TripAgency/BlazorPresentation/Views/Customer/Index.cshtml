@model Application.DTOs.Customer.CustomersDto

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Customers List</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-user-plus"></i> New Customer
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Country</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model.Customers)
                    {
                    <tr>
                        <td class="align-middle">
                            <strong>@customer.Name</strong>
                        </td>
                        <td class="align-middle">
                            <span class="badge bg-secondary">
                                @customer.Country
                            </span>
                        </td>
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                <a asp-action="UpdateCustomer" asp-route-id="@customer.Id"
                                   class="btn btn-sm btn-outline-primary" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form asp-action="DeleteCustomer" asp-route-id="@customer.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                            onclick="return confirm('Are you sure you want to delete this customer?')" title="Delete">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .table-hover tbody tr:hover {
            background-color: #f8f9fa;
        }

        .card {
            border: none;
            border-radius: 10px;
        }
    </style>
}