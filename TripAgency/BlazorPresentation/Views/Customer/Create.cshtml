@model Application.DTOs.Customer.CreateCustomerDto

<div class="container mt-4">
    <h2 class="mb-4">Create New Customer</h2>

    <form asp-action="Create" class="border p-4 rounded bg-light" style="max-width: 500px;">
        <div class="mb-3">
            <label asp-for="FirstName" class="form-label fw-bold"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Country" class="form-label fw-bold"></label>
            <input asp-for="Country" class="form-control" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary me-2">
                <i class="fas fa-save"></i> Create
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}